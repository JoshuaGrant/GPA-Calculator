public class GPA_Calculator {
	private Scanner in;
	private ArrayList<Double> gradeBook;
	
	public GPA_Calculator()  {
		in = new Scanner(System.in);
		gradeBook = new ArrayList<Double>();
	}


// Adds grades to the array gradeBook
public void addGrades()  {
	String grade = null;
	String choice = null;
	
	System.out.println("Press 'a' to add a grade.");
	choice = in.nextLine();
	
	while(!choice.equals("f"))
	{
		System.out.println("Enter grade:");
		grade = in.nextLine();
		
	if (grade.equals(null))  {
		System.out.println("Please enter a grade.");
	}
	
	//Convert the letter grade to a numeric one.
	switch(grade)  {
	case "A": gradeBook.add(4.0);
	break;
	
	case "A-": gradeBook.add(3.3);
	break;
	
	case "B+": gradeBook.add(3.0);
	break;
	
	case "B": gradeBook.add(2.7);
	break;
	
	case "B-": gradeBook.add(2.3);
	break;
	
	case "C+": gradeBook.add(2.0);
	break;
	
	case "C": gradeBook.add(1.7);
	break;
	
	case "C-": gradeBook.add(1.3);
	break;
	
	case "D+": gradeBook.add(1.0);
	break;
	
	case "D": gradeBook.add(0.7);
	break;
	
	case "D-": gradeBook.add(0.0);
	break;
	
	case "F": gradeBook.add(0.0);
	break;
	
	default: System.out.println("Your grade must be a capital letter (ex. B+");
	break;
	}
	
	System.out.println("Press c to continue.");
	System.out.println("Press f when finished.");
	choice = in.nextLine();
	
	
	
	}
	
	
	}

    public double computeGPA()  {
    	double sum = 0;
    	int gradeCount = 0;
    	for (int i = 0; i < gradeBook.size(); ++i)  {
    		sum = sum + gradeBook.get(i);
    		gradeCount++;
    		
    	}
    	double totalGPA = sum / gradeCount;
    	System.out.println("GPA:" + totalGPA);
    	return totalGPA;
    	
    }



public static void main(String[] args)  {
	GPA_Calculator gpa = new GPA_Calculator();
	gpa.addGrades();
	gpa.computeGPA();
	
}

}

